<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capacitacion.Pages.Login">

    <StackLayout>
        <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email"></Entry>
        <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True"></Entry>

        <Button Text="Iniciar Sesión" Clicked="Button_Clicked"></Button>
    </StackLayout>
</ContentPage>